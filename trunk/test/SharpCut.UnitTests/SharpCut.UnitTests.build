<?xml version="1.0" encoding="utf-8"?>

<project name="SharpCut.UnitTests" default="testWithCoverage">
  <property name="solution.targetframework" value="net-3.5" overwrite="false" />
  <description>Run unit test and collect coverage.</description>

  <property name="solution.home"             value="${path::get-full-path('..\..')}" />

  <!-- Uncomment the line below to specify a different set of assembly list to profile -->
  <property name="coverage.assembly.list"    value="SharpCut" />

  <include buildfile="${solution.home}/dependency/NAntCommonTargets/CommonTargets.build"/>

</project>